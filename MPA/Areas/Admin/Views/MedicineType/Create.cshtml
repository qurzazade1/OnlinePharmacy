@model MedicineType
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />

<br />
<form method="post" asp-action="Create">
    <div class="border backgroundghostWhite" style="height:400px;">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-6">
                <h2 class="text-success">Add new MedicineType</h2>

            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-6 offset-3">

                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-outline-info form-control" value="Create" />
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-outline-success form-control">Back to List</a>
                    </div>
                </div>




            </div>
        </div>
    </div>
</form>