@model IEnumerable<DiscountCode>

    @{
        ViewData["Title"] = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <br /><br />
    <div class="border backgroundghostWhite">
        <div class="row">
            <div class="col-6">
                <h2 class="text-success"> DiscountCode List</h2>
            </div>
            <div class="col-6 text-right">
                 <p>
                    <a asp-action="Create" class="btn btn-outline-success">  Add New </a>
                </p>
            </div>
        </div>
        <br />
        <div>
            @if (Model.Count() > 0)
            {
                <table class="table  border">
                    <tr class="table-success">
                        <th>
                            @Html.DisplayNameFor(m => m.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.DiscountAmount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.MinimumAmount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.IsActive)
                        </th>
                        <th>
                            @Html.DisplayNameFor(m => m.DiscountCodeType)
                        </th>

                        <th></th>
                        <th></th>
                    </tr>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.DiscountAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.MinimumAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.IsActive)
                        </td>
                        <th>
                            @if (item.DiscountCodeType.Equals("1"))
                            {


                                @Html.Raw("Dollar");

                            }
                            
                            @if (item.DiscountCodeType.Equals("0"))
                            {


                                @Html.Raw("Persent");

                            }


                          
                        </th>

                        <td>
                            <partial name="_TableButtonPartial" model="item.Id" />
                        </td>
                    </tr>
                    }
                </table>
            }
            else
            {
                <p>No coupons exists...</p>
            }
        </div>
    </div>

