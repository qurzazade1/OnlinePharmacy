@model OnlinePharmacy.Models.DiscountCode
@{
    ViewData["Title"] = "Edit";
}

<br />
<h3 class="text-success">Edit DiscountCode</h3>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class=" row backgroundghostWhite">
    

        <div class=" col-12" style="text-align:center">
            @if (Model.Picture != null)
            {
                var base64 = Convert.ToBase64String(Model.Picture);
                var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);

                <img src="@imgsrc" />

            }
        </div>

    

        <div class="col-12 pt-4" style="text-align:left;">
            <input hidden asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-2 offset-1">
                    <label asp-for="Name" class="custom-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>


            <div class="form-group row">
                <div class="col-2 offset-1">
                    <label asp-for="DiscountCodeType" class="custom-label"></label>
                </div>
                <div class="col-6">
                    <select asp-for="DiscountCodeType" asp-items="Html.GetEnumSelectList<DiscountCode.EDiscountCodeType>()" class="form-control"></select>
                </div>
            </div>


            <div class="form-group row">
                <div class="col-2 offset-1">
                    <label asp-for="Picture" class="custom-label"></label>
                </div>
                <div class="col-6">
                    <input type="file" style="padding:0px; height:100%; width:100%;" id="projectImage" name="files" multiple class="form-control" />
                </div>
            </div>


            <div class="form-group row">
                <div class="col-2 offset-1">
                    <label asp-for="MinimumAmount" class="custom-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="MinimumAmount" class="form-control" />
                </div>
                <span asp-validation-for="MinimumAmount" class="text-danger"></span>
            </div>


            <div class="form-group row">
                <div class="col-2 offset-1">
                    <label asp-for="DiscountAmount" class="custom-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="DiscountAmount" class="form-control" />
                </div>
                <span asp-validation-for="DiscountAmount" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2 offset-1">
                    <label asp-for="IsActive" class="custom-label"></label>
                </div>
                <div class="col-6">
                    <input type="checkbox" asp-for="IsActive" class="form-control" />
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-6 offset-3">

                    <div class="row">
                        <div class="col-6">
                            <input type="submit" class="btn btn-outline-info form-control" asp-route-id="@Model.Id" value="Update" />
                        </div>
                        <div class="col-6">
                            <a asp-action="Index" class="btn btn-outline-success form-control">Back to List</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>