@model OnlinePharmacy.Models.ViewModels.MedicineViewModel
@{
    ViewData["Title"] = "Delete";
}

<br />

<form method="post">
    <div class="backgroundghostWhiteBorder row ">



        <div class="col-12" style="margin-bottom:20px;">

            <div class="row">
                <div class="col-8">


                    <h2 class="text-success">Delete Medicine</h2>
                   
                </div>

                <div class="col-4">
                    <a asp-action="Index" class="btn btn-outline-info form-control">Back to List</a>
                </div>
            </div>

        </div>
        <div class="col-3">
            <img src="@Model.Medicine.Image" style="width:100%; border-radius:5px;border:1px solid #bbb9b9;" />
        </div>

        <div class="col-1"></div>


        <div class="col-8">
            <input type="hidden" asp-for="Medicine.Id" />
            <fieldset disabled>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Medicine.Name" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Medicine.Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Medicine.Description" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        @Html.TextAreaFor(m => m.Medicine.Description)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Medicine.Price" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Medicine.Price" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Medicine.MedicineTypeId" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Medicine.MedicineType.Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Medicine.MedicineSubtypeId" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Medicine.MedicineSubtype.Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Medicine.Country" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Medicine.Country" asp-items="Html.GetEnumSelectList<Medicine.ECountry>()" class="form-control"></select>
                    </div>


                </div>


            </fieldset>
        </div>

        <div class="col-8  offset-4">
            <div class="col-8 offset-4">

                <div class="row">
                    <div class="col-12">
                        <input type="submit" class="btn btn-outline-danger form-control" asp-route-id="@Model.Medicine.Id" value="Delete" />
                    </div>
                </div>


            </div>
        </div>
    </div>
</form>
@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: "lists",
            toolbar: "undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist",
            menubar: 'file edit format',
            readonly: 1
        });</script>

    <script>


        tinymce.init({ selector: 'textarea' });</script>



}
